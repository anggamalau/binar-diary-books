<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Diary Books</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="/">Diary Books</a>
            <% if (locals.user) { %>
                <div class="navbar-nav ms-auto">
                    <a class="nav-link" href="/auth/logout">Logout</a>
                </div>
            <% } %>
        </div>
    </nav>

    <main class="container mt-4">
        <% if (locals.error) { %>
            <div class="alert alert-danger" role="alert">
                <%= error %>
            </div>
        <% } %>
        
        <% if (locals.success) { %>
            <div class="alert alert-success" role="alert">
                <%= success %>
            </div>
        <% } %>

        <div class="row">
            <div class="col-12">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h1>Welcome, <%= user.name %>!</h1>
                    <div>
                        <span class="text-muted">Logged in as <%= user.email %></span>
                    </div>
                </div>
                
                <!-- Calendar Container -->
                <div class="card">
                    <div class="card-header">
                        <div class="d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">
                                <i class="fas fa-calendar-alt me-2"></i>
                                <%= calendar.monthName %> <%= calendar.year %>
                            </h5>
                            <div class="btn-group" role="group" aria-label="Calendar navigation">
                                <a href="/calendar/<%= navigation.prev.year %>/<%= navigation.prev.month %>" 
                                   class="btn btn-outline-primary btn-sm">
                                    <i class="fas fa-chevron-left"></i> Previous
                                </a>
                                <a href="/dashboard" class="btn btn-primary btn-sm">Today</a>
                                <a href="/calendar/<%= navigation.next.year %>/<%= navigation.next.month %>" 
                                   class="btn btn-outline-primary btn-sm">
                                    Next <i class="fas fa-chevron-right"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="card-body p-0">
                        <!-- Calendar Grid -->
                        <div class="calendar-container">
                            <!-- Day headers -->
                            <div class="calendar-header">
                                <div class="calendar-day-header">Sun</div>
                                <div class="calendar-day-header">Mon</div>
                                <div class="calendar-day-header">Tue</div>
                                <div class="calendar-day-header">Wed</div>
                                <div class="calendar-day-header">Thu</div>
                                <div class="calendar-day-header">Fri</div>
                                <div class="calendar-day-header">Sat</div>
                            </div>
                            
                            <!-- Calendar weeks -->
                            <div class="calendar-body">
                                <% calendar.weeks.forEach(function(week) { %>
                                    <div class="calendar-week">
                                        <% week.forEach(function(day) { %>
                                            <% if (day) { %>
                                                <div class="calendar-day <%= day.isToday ? 'today' : '' %>" 
                                                     data-date="<%= day.dateString %>"
                                                     role="button"
                                                     tabindex="0">
                                                    <span class="day-number"><%= day.day %></span>
                                                    <div class="day-content">
                                                        <!-- Entry indicators will go here in Phase 3 -->
                                                    </div>
                                                </div>
                                            <% } else { %>
                                                <div class="calendar-day empty"></div>
                                            <% } %>
                                        <% }); %>
                                    </div>
                                <% }); %>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer text-muted">
                        <small>Click on any day to view or create diary entries for that date.</small>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/main.js"></script>
</body>
</html>