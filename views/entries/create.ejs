<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Diary Books</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <!-- Quill.js CSS -->
    <link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="/">Diary Books</a>
            <% if (locals.user) { %>
                <div class="navbar-nav ms-auto">
                    <a class="nav-link" href="/auth/logout">Logout</a>
                </div>
            <% } %>
        </div>
    </nav>

    <main class="container mt-4">
        <% if (locals.error) { %>
            <div class="alert alert-danger" role="alert">
                <%= error %>
            </div>
        <% } %>
        
        <% if (locals.success) { %>
            <div class="alert alert-success" role="alert">
                <%= success %>
            </div>
        <% } %>

        <div class="row justify-content-center">
            <div class="col-md-8">
                <!-- Navigation breadcrumb -->
                <nav aria-label="breadcrumb" class="mb-4">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/dashboard">Dashboard</a></li>
                        <li class="breadcrumb-item"><a href="/entries/date/<%= date %>"><%= formattedDate %></a></li>
                        <li class="breadcrumb-item active" aria-current="page">New Entry</li>
                    </ol>
                </nav>

                <div class="card">
                    <div class="card-header">
                        <h4 class="mb-0">
                            <i class="fas fa-plus-circle me-2"></i>
                            New Diary Entry for <%= formattedDate %>
                        </h4>
                    </div>
                    <div class="card-body">
                        <form method="POST" action="/entries/create">
                            <input type="hidden" name="entry_date" value="<%= date %>">
                            
                            <div class="mb-3">
                                <label for="title" class="form-label">
                                    <i class="fas fa-heading me-1"></i>
                                    Title *
                                </label>
                                <input type="text" 
                                       class="form-control" 
                                       id="title" 
                                       name="title" 
                                       value="<%= locals.formData ? formData.title : '' %>" 
                                       placeholder="What happened today?"
                                       required>
                                <div class="form-text">Give your entry a meaningful title</div>
                            </div>
                            
                            <div class="mb-3">
                                <label for="tags" class="form-label">
                                    <i class="fas fa-tags me-1"></i>
                                    Tags
                                </label>
                                <input type="text" 
                                       class="form-control" 
                                       id="tags" 
                                       name="tags" 
                                       value="<%= locals.formData ? formData.tags : '' %>" 
                                       placeholder="happy, work, family, travel">
                                <div class="form-text">Add tags separated by commas to categorize your entry</div>
                            </div>
                            
                            <div class="mb-4">
                                <label class="form-label">
                                    <i class="fas fa-file-alt me-1"></i>
                                    Content *
                                </label>
                                <!-- Quill Editor Container -->
                                <div id="editor" class="mb-3" style="height: 300px;">
                                    <%= locals.formData ? formData.content : '' %>
                                </div>
                                <!-- Hidden input to store Quill content -->
                                <input type="hidden" id="content" name="content" required>
                                <div class="form-text">Write about your day, thoughts, or anything on your mind</div>
                            </div>
                            
                            <div class="d-flex justify-content-between">
                                <a href="/entries/date/<%= date %>" class="btn btn-secondary">
                                    <i class="fas fa-times me-1"></i>
                                    Cancel
                                </a>
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-save me-1"></i>
                                    Save Entry
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Quill.js -->
    <script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>
    <script src="/js/main.js"></script>
    <script>
        // Initialize Quill editor
        var quill = new Quill('#editor', {
            theme: 'snow',
            placeholder: 'Share your thoughts, experiences, and feelings...',
            modules: {
                toolbar: [
                    [{ 'header': [1, 2, 3, false] }],
                    ['bold', 'italic', 'underline', 'strike'],
                    ['blockquote', 'code-block'],
                    [{ 'list': 'ordered'}, { 'list': 'bullet' }],
                    ['link', 'image'],
                    ['clean']
                ]
            }
        });

        // Handle form submission
        document.querySelector('form').onsubmit = function() {
            // Get HTML content from Quill
            var content = document.querySelector('#content');
            content.value = quill.root.innerHTML;
            
            // Validate content
            if (quill.getText().trim().length === 0) {
                content.setCustomValidity('Content is required');
                return false;
            }
            content.setCustomValidity('');
            return true;
        };
    </script>
</body>
</html>