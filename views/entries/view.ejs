<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Diary Books</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="/">Diary Books</a>
            <% if (locals.user) { %>
                <div class="navbar-nav ms-auto">
                    <a class="nav-link" href="/auth/logout">Logout</a>
                </div>
            <% } %>
        </div>
    </nav>

    <main class="container mt-4">
        <% if (locals.error) { %>
            <div class="alert alert-danger" role="alert">
                <%= error %>
            </div>
        <% } %>
        
        <% if (locals.success) { %>
            <div class="alert alert-success" role="alert">
                <%= success %>
            </div>
        <% } %>

        <div class="row justify-content-center">
            <div class="col-md-8">
                <!-- Navigation breadcrumb -->
                <nav aria-label="breadcrumb" class="mb-4">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/dashboard">Dashboard</a></li>
                        <li class="breadcrumb-item"><a href="/entries/date/<%= entry.entry_date %>"><%= entry.getFormattedDate() %></a></li>
                        <li class="breadcrumb-item active" aria-current="page"><%= entry.title %></li>
                    </ol>
                </nav>

                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <div>
                            <h4 class="mb-1">
                                <i class="fas fa-book-open me-2"></i>
                                <%= entry.title %>
                            </h4>
                            <div class="text-muted small">
                                <i class="fas fa-calendar me-1"></i>
                                <%= entry.getFormattedDate() %>
                                <span class="mx-2">â€¢</span>
                                <i class="fas fa-clock me-1"></i>
                                Created: <%= entry.getFormattedCreatedAt() %>
                            </div>
                        </div>
                        <div class="dropdown">
                            <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                <i class="fas fa-ellipsis-v"></i>
                                Actions
                            </button>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="/entries/<%= entry.id %>/edit">
                                    <i class="fas fa-edit me-2"></i>Edit Entry
                                </a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <form method="POST" action="/entries/<%= entry.id %>/delete" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this entry? This action cannot be undone.')">
                                        <button type="submit" class="dropdown-item text-danger">
                                            <i class="fas fa-trash me-2"></i>Delete Entry
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="card-body">
                        <% if (entry.getTagsArray().length > 0) { %>
                            <div class="mb-3">
                                <% entry.getTagsArray().forEach(function(tag) { %>
                                    <a href="/entries/tag/<%= encodeURIComponent(tag) %>" class="badge bg-secondary text-decoration-none me-1">
                                        <i class="fas fa-tag me-1"></i><%= tag %>
                                    </a>
                                <% }); %>
                            </div>
                        <% } %>
                        <div class="entry-content">
                            <%- entry.content %>
                        </div>
                    </div>
                    <div class="card-footer d-flex justify-content-between">
                        <a href="/entries/date/<%= entry.entry_date %>" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-1"></i>
                            Back to <%= entry.getFormattedDate() %>
                        </a>
                        <a href="/entries/<%= entry.id %>/edit" class="btn btn-primary">
                            <i class="fas fa-edit me-1"></i>
                            Edit Entry
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/main.js"></script>
</body>
</html>