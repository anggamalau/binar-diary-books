<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Diary Books</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="/">Diary Books</a>
            <% if (locals.user) { %>
                <div class="navbar-nav ms-auto">
                    <a class="nav-link" href="/auth/logout">Logout</a>
                </div>
            <% } %>
        </div>
    </nav>

    <main class="container mt-4">
        <% if (locals.error) { %>
            <div class="alert alert-danger" role="alert">
                <%= error %>
            </div>
        <% } %>
        
        <% if (locals.success) { %>
            <div class="alert alert-success" role="alert">
                <%= success %>
            </div>
        <% } %>

        <div class="row">
            <div class="col-12">
                <!-- Search Form -->
                <div class="card mb-4">
                    <div class="card-body">
                        <h4 class="card-title mb-3">
                            <i class="fas fa-search me-2"></i>
                            Search Diary Entries
                        </h4>
                        <form method="GET" action="/entries/search" class="no-loading">
                            <div class="input-group">
                                <input type="text" 
                                       class="form-control" 
                                       name="q" 
                                       value="<%= searchTerm %>" 
                                       placeholder="Search by title, content, or tags..."
                                       autofocus>
                                <button class="btn btn-primary" type="submit">
                                    <i class="fas fa-search me-1"></i>
                                    Search
                                </button>
                            </div>
                            <div class="form-text mt-2">
                                Tip: You can search for words in titles, content, or tags
                            </div>
                        </form>
                    </div>
                </div>

                <!-- Search Results -->
                <% if (searchTerm) { %>
                    <div class="mb-3">
                        <h5 class="text-muted">
                            Found <%= entries.length %> <%= entries.length === 1 ? 'result' : 'results' %> for "<%= searchTerm %>"
                        </h5>
                    </div>
                <% } %>

                <% if (entries && entries.length > 0) { %>
                    <div class="row">
                        <% entries.forEach(function(entry) { %>
                            <div class="col-md-6 col-lg-4 mb-4">
                                <div class="card h-100 fade-in">
                                    <div class="card-header">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <h6 class="mb-0 text-truncate">
                                                <%= entry.title %>
                                            </h6>
                                            <small class="text-muted text-nowrap ms-2">
                                                <%= entry.getFormattedDate() %>
                                            </small>
                                        </div>
                                    </div>
                                    <div class="card-body">
                                        <% if (entry.getTagsArray().length > 0) { %>
                                            <div class="mb-2">
                                                <% entry.getTagsArray().forEach(function(tag) { %>
                                                    <a href="/entries/tag/<%= encodeURIComponent(tag) %>" class="badge bg-secondary text-decoration-none me-1">
                                                        <i class="fas fa-tag me-1"></i><%= tag %>
                                                    </a>
                                                <% }); %>
                                            </div>
                                        <% } %>
                                        <div class="card-text entry-preview">
                                            <%- entry.content.replace(/<[^>]*>/g, '').substring(0, 150) %><%= entry.content.replace(/<[^>]*>/g, '').length > 150 ? '...' : '' %>
                                        </div>
                                    </div>
                                    <div class="card-footer">
                                        <div class="d-flex justify-content-between">
                                            <a href="/entries/date/<%= entry.entry_date %>" class="btn btn-outline-secondary btn-sm">
                                                <i class="fas fa-calendar-day me-1"></i>
                                                View Date
                                            </a>
                                            <a href="/entries/<%= entry.id %>" class="btn btn-outline-primary btn-sm">
                                                <i class="fas fa-eye me-1"></i>
                                                Read
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <% }); %>
                    </div>

                    <!-- Pagination -->
                    <% if (currentPage > 1 || hasMore) { %>
                        <nav aria-label="Search results pagination" class="mt-4">
                            <ul class="pagination justify-content-center">
                                <% if (currentPage > 1) { %>
                                    <li class="page-item">
                                        <a class="page-link" href="/entries/search?q=<%= encodeURIComponent(searchTerm) %>&page=<%= currentPage - 1 %>">
                                            <i class="fas fa-chevron-left me-1"></i>Previous
                                        </a>
                                    </li>
                                <% } %>
                                
                                <li class="page-item active">
                                    <span class="page-link">Page <%= currentPage %></span>
                                </li>
                                
                                <% if (hasMore) { %>
                                    <li class="page-item">
                                        <a class="page-link" href="/entries/search?q=<%= encodeURIComponent(searchTerm) %>&page=<%= currentPage + 1 %>">
                                            Next<i class="fas fa-chevron-right ms-1"></i>
                                        </a>
                                    </li>
                                <% } %>
                            </ul>
                        </nav>
                    <% } %>
                <% } else if (searchTerm) { %>
                    <!-- No results state -->
                    <div class="text-center py-5">
                        <div class="mb-4">
                            <i class="fas fa-search text-muted" style="font-size: 4rem;"></i>
                        </div>
                        <h3 class="text-muted mb-3">No entries found</h3>
                        <p class="text-muted mb-4">Try searching with different keywords or check your spelling.</p>
                        <a href="/dashboard" class="btn btn-primary">
                            <i class="fas fa-calendar me-2"></i>
                            Back to Calendar
                        </a>
                    </div>
                <% } %>
            </div>
        </div>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/main.js"></script>
</body>
</html>