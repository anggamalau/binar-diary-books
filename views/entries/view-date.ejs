<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Diary Books</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="/">Diary Books</a>
            <% if (locals.user) { %>
                <div class="navbar-nav ms-auto">
                    <a class="nav-link" href="/auth/logout">Logout</a>
                </div>
            <% } %>
        </div>
    </nav>

    <main class="container mt-4">
        <% if (locals.error) { %>
            <div class="alert alert-danger" role="alert">
                <%= error %>
            </div>
        <% } %>
        
        <% if (locals.success) { %>
            <div class="alert alert-success" role="alert">
                <%= success %>
            </div>
        <% } %>

        <div class="row">
            <div class="col-12">
                <!-- Navigation breadcrumb -->
                <nav aria-label="breadcrumb" class="mb-4">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/dashboard">Dashboard</a></li>
                        <li class="breadcrumb-item active" aria-current="page"><%= formattedDate %></li>
                    </ol>
                </nav>

                <!-- Page header -->
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h1>
                        <i class="fas fa-calendar-day me-2"></i>
                        <%= formattedDate %>
                    </h1>
                    <a href="/entries/new/<%= date %>" class="btn btn-primary">
                        <i class="fas fa-plus me-1"></i>
                        New Entry
                    </a>
                </div>

                <!-- Entries display -->
                <% if (entries && entries.length > 0) { %>
                    <div class="row">
                        <% entries.forEach(function(entry, index) { %>
                            <div class="col-md-6 mb-4">
                                <div class="card h-100">
                                    <div class="card-header d-flex justify-content-between align-items-center">
                                        <h5 class="mb-0">
                                            <i class="fas fa-book-open me-2"></i>
                                            <%= entry.title %>
                                        </h5>
                                        <div class="dropdown">
                                            <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                                <i class="fas fa-ellipsis-v"></i>
                                            </button>
                                            <ul class="dropdown-menu">
                                                <li><a class="dropdown-item" href="/entries/<%= entry.id %>">
                                                    <i class="fas fa-eye me-2"></i>View
                                                </a></li>
                                                <li><a class="dropdown-item" href="/entries/<%= entry.id %>/edit">
                                                    <i class="fas fa-edit me-2"></i>Edit
                                                </a></li>
                                                <li><hr class="dropdown-divider"></li>
                                                <li>
                                                    <form method="POST" action="/entries/<%= entry.id %>/delete" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this entry?')">
                                                        <button type="submit" class="dropdown-item text-danger">
                                                            <i class="fas fa-trash me-2"></i>Delete
                                                        </button>
                                                    </form>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                    <div class="card-body">
                                        <% if (entry.getTagsArray().length > 0) { %>
                                            <div class="mb-2">
                                                <% entry.getTagsArray().forEach(function(tag) { %>
                                                    <span class="badge bg-secondary me-1">
                                                        <i class="fas fa-tag me-1"></i><%= tag %>
                                                    </span>
                                                <% }); %>
                                            </div>
                                        <% } %>
                                        <div class="card-text entry-preview">
                                            <%- entry.content.replace(/<[^>]*>/g, '').substring(0, 200) %><%= entry.content.replace(/<[^>]*>/g, '').length > 200 ? '...' : '' %>
                                        </div>
                                        <div class="text-muted small mt-2">
                                            <i class="fas fa-clock me-1"></i>
                                            Created: <%= entry.getFormattedCreatedAt() %>
                                        </div>
                                    </div>
                                    <div class="card-footer">
                                        <a href="/entries/<%= entry.id %>" class="btn btn-outline-primary btn-sm">
                                            <i class="fas fa-eye me-1"></i>
                                            Read Full Entry
                                        </a>
                                    </div>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                <% } else { %>
                    <!-- No entries state -->
                    <div class="text-center py-5">
                        <div class="mb-4">
                            <i class="fas fa-book-open text-muted" style="font-size: 4rem;"></i>
                        </div>
                        <h3 class="text-muted mb-3">No entries for this date</h3>
                        <p class="text-muted mb-4">Start writing about your day by creating your first diary entry.</p>
                        <a href="/entries/new/<%= date %>" class="btn btn-primary btn-lg">
                            <i class="fas fa-plus me-2"></i>
                            Create Your First Entry
                        </a>
                    </div>
                <% } %>
            </div>
        </div>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/main.js"></script>
</body>
</html>