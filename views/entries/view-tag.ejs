<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Diary Books</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="/">Diary Books</a>
            <% if (locals.user) { %>
                <div class="navbar-nav ms-auto">
                    <a class="nav-link" href="/auth/logout">Logout</a>
                </div>
            <% } %>
        </div>
    </nav>

    <main class="container mt-4">
        <% if (locals.error) { %>
            <div class="alert alert-danger" role="alert">
                <%= error %>
            </div>
        <% } %>
        
        <% if (locals.success) { %>
            <div class="alert alert-success" role="alert">
                <%= success %>
            </div>
        <% } %>

        <div class="row">
            <div class="col-12">
                <!-- Navigation breadcrumb -->
                <nav aria-label="breadcrumb" class="mb-4">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/dashboard">Dashboard</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Tag: <%= tag %></li>
                    </ol>
                </nav>

                <!-- Page header -->
                <div class="mb-4">
                    <h1>
                        <i class="fas fa-tag me-2"></i>
                        Entries tagged: <%= tag %>
                    </h1>
                    <p class="text-muted">Found <%= entries.length %> <%= entries.length === 1 ? 'entry' : 'entries' %> with this tag</p>
                </div>

                <!-- Entries display -->
                <% if (entries && entries.length > 0) { %>
                    <div class="row">
                        <% entries.forEach(function(entry) { %>
                            <div class="col-md-6 mb-4">
                                <div class="card h-100">
                                    <div class="card-header">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <h5 class="mb-0">
                                                <%= entry.title %>
                                            </h5>
                                            <small class="text-muted">
                                                <%= entry.getFormattedDate() %>
                                            </small>
                                        </div>
                                    </div>
                                    <div class="card-body">
                                        <% if (entry.getTagsArray().length > 0) { %>
                                            <div class="mb-2">
                                                <% entry.getTagsArray().forEach(function(entryTag) { %>
                                                    <% if (entryTag === tag) { %>
                                                        <span class="badge bg-primary me-1">
                                                            <i class="fas fa-tag me-1"></i><%= entryTag %>
                                                        </span>
                                                    <% } else { %>
                                                        <a href="/entries/tag/<%= encodeURIComponent(entryTag) %>" class="badge bg-secondary text-decoration-none me-1">
                                                            <i class="fas fa-tag me-1"></i><%= entryTag %>
                                                        </a>
                                                    <% } %>
                                                <% }); %>
                                            </div>
                                        <% } %>
                                        <div class="card-text entry-preview">
                                            <%- entry.content.replace(/<[^>]*>/g, '').substring(0, 200) %><%= entry.content.replace(/<[^>]*>/g, '').length > 200 ? '...' : '' %>
                                        </div>
                                        <div class="text-muted small mt-2">
                                            <i class="fas fa-clock me-1"></i>
                                            Created: <%= entry.getFormattedCreatedAt() %>
                                        </div>
                                    </div>
                                    <div class="card-footer">
                                        <div class="d-flex justify-content-between">
                                            <a href="/entries/date/<%= entry.entry_date %>" class="btn btn-outline-secondary btn-sm">
                                                <i class="fas fa-calendar-day me-1"></i>
                                                View Date
                                            </a>
                                            <a href="/entries/<%= entry.id %>" class="btn btn-outline-primary btn-sm">
                                                <i class="fas fa-eye me-1"></i>
                                                Read Full Entry
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                <% } else { %>
                    <!-- No entries state -->
                    <div class="text-center py-5">
                        <div class="mb-4">
                            <i class="fas fa-tag text-muted" style="font-size: 4rem;"></i>
                        </div>
                        <h3 class="text-muted mb-3">No entries found with this tag</h3>
                        <p class="text-muted mb-4">Try exploring other tags or create new entries with this tag.</p>
                        <a href="/dashboard" class="btn btn-primary">
                            <i class="fas fa-calendar me-2"></i>
                            Back to Calendar
                        </a>
                    </div>
                <% } %>
            </div>
        </div>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/main.js"></script>
</body>
</html>